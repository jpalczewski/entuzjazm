{
    "extends": "astro/tsconfigs/strictest",
    "compilerOptions": {
        "plugins": [
          {
            "name": "@astrojs/ts-plugin"
          },
        ],
        "verbatimModuleSyntax": true,
        "baseUrl": ".",
        "paths": {
          "@components/*": ["src/components/*"],
          "@layouts/*": ["src/layouts/*"]
        }
      }
}